SELECT *
FROM VideoLike;
insert into VideoLike(Video_UID, userID)
values (78, 'wodus331');

SELECT b.userID
from video a
         LEFT JOIN (SELECT *
                    FROM VIDEOLIKE
                    WHERE Video_UID = 78 AND userID = 'wodus331') b ON a.VIDEO_UID = b.Video_UID
WHERE a.VIDEO_UID = 78;

SELECT a.userID, b.*
from USERS a
         LEFT JOIN (SELECT *
                    FROM VIDEO) b ON a.userID = b.Upload_User
WHERE CHANNEL_NAME Like '웰컴투';

